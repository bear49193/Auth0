@import 'partials/_fonts';
@import 'partials/_colors';
@import 'partials/_logos';

#wpwrap {
  background-color: bgColor;
}
.a0-wrap {  
  font-family:'avenir roman';
  margin-left:-10px;
  
  @media (min-width: 768px) {
    margin-left:-20px;
  }

  color:text;
  h1,h2,p {
    color:text;
  }
  
  h1, .h1, h2, .h2, h3, .h3 {
    margin-top: 0;
  }
  
  h3 {
    background: transparent;
    padding: 0;
  }
  
  h1 {
    font-size: 32px;
  }
  
  p {
    font-size: 17px;
    color:softText;
  }
  
  .a0-buttons {
    margin: 20px 0;
    
    &.extra-space {
      margin-top:50px;
    }
  }
  
  form {
    margin:0;
  }
  
  .container-fluid {
    padding-top: 50px;
    max-width:750px;
  }
  
  .modal-dialog {
    margin: 100px auto;
  }
  
  .modal-body {
    padding:30px;
    font-size:16px;
  }
  
  .modal-header {
    h4 {
      text-align:center;
      font-weight:bold;
    }
    .close {
      margin-top: 2px;
    }
  }
  
  .modal-footer {
    padding:25px;
  }
  
  .bg-danger {
    padding: 17px;
    font-size: 15px;
    margin: 30px 0;
  }
