@import 'partials/_colors';

#wpwrap {
  background-color: bgColor;
}
.a0-wrap {
  position:relative;
  left:-20px;
  width:calc(100% + 20px);
}

.a0-header {
  text-align:center;
  img {
    height:55px;
    margin: 50px auto;
  }
}

.a0-button {

  border-radius: 3px;
  border: none;
  line-height: 45px;
  min-width: 150px;
  text-transform: uppercase;
  text-decoration: none;
  font-size: 12px;
  display: inline-block;
  text-align: center;

  &.primary {
    color: buttonPrimaryText;
    background-color: buttonPrimaryBG;
    
    &:hover {
      color: buttonPrimaryText;
    }
  }
  
  &.secondary {
    font-weight:bold;
    color: buttonSecondaryText;
    background-color: buttonSecondaryBG;
    text-decoration: underline;
    
    &:hover {
      color: buttonSecondaryText;
    }
  }
}

.a0-message {
  padding: 30px 30px 30px 85px;
  
  &.a0-notice {
    background-color: noticeBG;
    color:noticeText;
  }
}


.a0-steps {
  background-color:#F2F5F8;
  padding-top:120px;
  padding-bottom:120px;
  height: 0;

  .progress {
    border-top:4px solid stepBG;
    margin: auto;
    float: none;
  }
  
  .steps {
    position:relative;
    top:-27px;
    text-align: center;
    
    span {
      display:inline-block;
      width:50px;
      height:50px;
      border-radius:30px;
      line-height: 50px;
      text-align: center;
      background-color:stepBG;
      color:stepText;
      font-weight:bold;
      font-size:15px;
    }
    
    p {
      display:none;
      color:stepDescriptionText;
      font-weight:bold;
    }
    
    .active span{
      background-color:activeStepBG;
    }
    
    .active p{
      display:block;
    }

  }

}