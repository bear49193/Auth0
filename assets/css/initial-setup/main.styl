@import 'partials/_fonts';
@import 'partials/_colors';
@import 'partials/_logos';

#wpwrap {
  background-color: bgColor;
}
.a0-wrap {  
  font-family:'avenir roman';
  margin-left:-10px;
  
  @media (min-width: 768px) {
    margin-left:-20px;
  }

  color:text;
  h1,h2,p {
    color:text;
  }
  
  h1, .h1, h2, .h2, h3, .h3 {
    margin-top: 0;
  }
  
  h3 {
    background: transparent;
    padding: 0;
  }
  
  h1 {
    font-size: 32px;
  }
  
  p {
    font-size: 17px;
    color:softText;
  }
  
  .a0-buttons {
    margin: 20px 0;
  }
  
  form {
    margin:0;
  }
  
  .container-fluid {
    padding-top: 50px;
    max-width:1000px;
  }
  
  .modal-dialog {
    margin: 100px auto;
  }
  
  .modal-body {
    padding:30px;
    font-size:16px;
  }
  
  .modal-header {
    h4 {
      text-align:center;
      font-weight:bold;
    }
    .close {
      margin-top: 2px;
    }
  }
  
  .modal-footer {
    padding:25px;
  }
  
  .bg-danger {
    padding: 17px;
    font-size: 15px;
    margin: 30px 0;
  }
}

.a0-step-text {
  margin:30px 0;
}

.a0-header {
  text-align:center;
  border-bottom:1px solid #F2F5F8;
  img {
    height:55px;
    margin: 30px auto;
  }
}

.a0-button {

  border-radius: 3px;
  border: none;
  line-height: 45px;
  min-width: 150px;
  text-transform: uppercase;
  text-decoration: none;
  font-size: 13px;
  display: inline-block;
  text-align: center;
  padding: 0 30px;
  
  &.link {
    text-transform: none;
    text-decoration: underline;
    outline:none;
  }

  &.primary {
    color: buttonPrimaryText;
    background-color: buttonPrimaryBG;
    
    &:hover {
      color: buttonPrimaryText;
    }
  }
  
  &.secondary {
    font-weight:bold;
    color: buttonSecondaryText;
    background-color: buttonSecondaryBG;
    text-decoration: underline;
    
    &:hover {
      color: buttonSecondaryText;
    }
  }
}

.a0-separator {
  border-bottom:1px solid #F2F5F8;
  margin:30px 0;
}

.a0-steps {
  background-color:#F2F5F8;
  padding-top:120px;
  padding-bottom:120px;
  height: 0;

  .a0-progress {
    border-top:4px solid stepBG;
    margin: auto;
    float: none;
  }
  
  .steps {
    position:relative;
    top:-27px;
    text-align: center;
    
    span {
      display:inline-block;
      width:50px;
      height:50px;
      border-radius:30px;
      line-height: 50px;
      text-align: center;
      background-color:stepBG;
      color:stepText;
      font-weight:bold;
      font-size:15px;
    }
    
    p {
      display:none;
      color:stepDescriptionText;
      font-weight: bold;
      padding-top: 10px;
      font-size: 15px;
      width: 105px;
      margin: auto;
    }
    
    .active span{
      background-color:activeStepBG;
    }
    
    .active p{
      display:block;
    }

  }

}

.consent-disclaimer {
  .logo {
    width: 100px;
    margin: 20px 0;
  }
}

p.a0-message {
  line-height: 38px;
  font-size: 12px;
  border-radius: 3px;
  position: relative;
  color:text;
  padding-left:20px;

  &.a0-notice {
    background-color: noticeBG;
    color:noticeText;
  }
  
  &.a0-tip {
    background-color: tipBG;
    
    a {
      color:text;
    }
  }
  
  b {
    font-weight:bold;
    text-transform:uppercase;
  }
  
  a {
    text-decoration:underline;
  }
  
  img {
    position:absolute;
    left:20px;
    top:20px;
  }
}

.a0-profiles {
  margin-top: 50px;
  margin-bottom: 30px;

  @media (min-width: 768px) {
    .col {
      padding-left: 25px;
    }
    .col:first-of-type {
      padding-left: 15px;
      padding-right: 25px;
    }
  }
  
  .profile {
    background-color: profileBG;
    border-radius: 3px;
    padding:25px;
    text-align: center;
    margin-bottom:20px;
    
    h2 {
      font-size: 22px;
    }
    
    p {
      font-size: 14px;
      margin: 20px 10px;
      height: 105px;
    }
      
    img {
      width: 100px;
      height: 100px;
      border-radius:50px;
    }
  }
}

.modal-footer {
  text-align:center;
}

.enterprise-connections {
  margin-top:30px;
  padding:0;
  
  .connection {
    background-color:stepBG;
    text-align: center;
    border-radius:3px;
    padding:20px;
    margin-bottom:30px;
    
    .title-wrapper {
      height:50px;
    }
    h4 {
      line-height: 24px;
      font-size: 17px;
    }
    
    .logo {
      width:100px;
      height:100px;
      border-radius:50px;
      background-size: 55% !important;
      margin: 0 auto 20px;
    }
    
    a {
      color:text;
      cursor:pointer;
    }
  }
}

.connections {
  margin-top:30px;
  height:600px;
  overflow-y:scroll;
  padding:0;
  
  &::-webkit-scrollbar {
    width: 14px;
  }

  &::-webkit-scrollbar-track {
    background: #F3F3F3;
    border-radius: 8px;
    border: 3px solid white;
  }

  &::-webkit-scrollbar-thumb {
    border: 3px solid white;
    border-radius: 8px;
    background: #D9D9DE;
  }
  
  .connection {
    border: 1px #d0d2d3 solid;
    float:left;
    width:50%;
    border-top:none;
    background-color:#F7F7F7;
    
    &:nth-child(even) {
      border-left:none;
    }
    &:nth-child(1),
    &:nth-child(2) {
      border-top:1px #d0d2d3 solid;
    }
    
    .a0-switch {
      float:right;
      position: relative;
      top: 35px;
      right: 15px;
    }
    
    .logo {
      width:100px;
      height:70px;
      margin: 15px;
      padding-right: 15px;
      padding-left: 15px;
        
      .logo-child {
        width:100px;
        height:70px;
        
        background-repeat: no-repeat;
        background-position: center center;
        background-size: contain;
      }
      
      &[data-logo="SAP"] {
        .logo-child {
          background-size: 80%;
        }
      }
          
      &[data-logo="Twitter"] {
        .logo-child {
          background-size: 60%;
        }
      }
            
      &[data-logo="Box"] {
        .logo-child {
          background-size: 70%;
          transform: translateX(-10%);
        }
      }
          
      &[data-logo="vk"] {
        .logo-child {
          background-size: 55%;
          transform: translateX(-27%);
        }
      }
    }
  }
}

.a0-switch {
  display:inline-block;
  
  input {
    display:none
  }
  label {
    position:relative;
    display:block;
    width:50px;
    height:30px;
    border-radius:15px;
    background-color:#A9A9A9;
  }
  input:checked + label {
    background-color:#45DB5E;
  }
  label::before {
    position:absolute;
    content:" ";
    width:26px;
    height:26px;
    border-radius:13px;
    top:2px;
    left:2px;
    background-color:#FFFFFF;
    box-shadow: 0 0 1px 0 rgba(0,0,0,0.25),0px 4px 11px 0 rgba(0,0,0,0.08),-1px 3px 3px 0 rgba(0,0,0,0.14);
    
    transition: left 300ms cubic-bezier(0.42,0.8,0.58,1.2);
  }
  input:checked + label::before {
    left: 22px;
  }
}

.a0-db-connection {
  
  padding-right: 90px;
  position: relative;
  
  .a0-step-text {
    margin: 30px 0;
  }

  .a0-switch {
    position: absolute;
    right: 20px;
    top: 60px;
  }
}

.lock {
  padding-top:30px;
  #a0-lock {
    margin:auto;
    width:300px;
  }
}

.a0-admin-creation {

  input[type=text], input[type=password] {
    width:100%;
    border:2px solid adminFormBorder;
    height: 50px;
    line-height: 40px;
    padding: 10px;
    
    &#admin-email {
      border-radius: 3px 3px 0 0;
      background-color: adminFormBG;
    }
    &#admin-password {
      border-top: none;
      border-radius: 0 0 3px 3px;
    }
  }
}

.a0-final-step {
  background-color:#F2F5F8; 
  text-align:center;
  padding: 30px 0;
  
  img {
    width: 100px;
    margin-bottom: 10px;
  }
}